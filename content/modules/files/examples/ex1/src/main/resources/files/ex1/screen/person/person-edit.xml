<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://personEdit.caption"
        focusComponent="form">
    <!-- tag::file-1[] -->
    <data>
        <instance id="personDc"
                  class="files.ex1.entity.Person">
            <fetchPlan extends="_base"/>
            <loader/>
        </instance>
    </data>
    <!-- end::file-1[] -->
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="windowCommitAndClose" caption="msg:///actions.Ok"
                icon="EDITOR_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="windowClose"
                caption="msg:///actions.Close"
                icon="EDITOR_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <!-- tag::file-2[] -->
    <layout spacing="true">
        <form dataContainer="personDc" id="form">
            <column>
                <textField id="nameField" property="name"/>
                <fileUpload id="photoField" property="photo"/> <!--1-->
            </column>
            <column>
                <image dataContainer="personDc" property="photo"
                       height="300" width="300" scaleMode="CONTAIN"/> <!--2-->
                <!-- end::file-2[] -->
                <!-- tag::file-3[] -->
                <linkButton id="downloadBtn" caption="Download"/>
                <!-- end::file-3[] -->
            <!-- tag::file-4[] -->
            </column>
            <!-- end::file-4[] -->
        </form>
        <hbox id="editActions" spacing="true" height="100%">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
